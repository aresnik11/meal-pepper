    <% @grocery_list.each do |meal_plan, recipes| %>
        <% if !recipes.empty? %>
            <h2><%= meal_plan %></h2>
            <% recipes.each do |rec_name, ings| %>
                <h3><%= rec_name %></h3>
                <ul>
                    <% ings.each do |ing| %>
