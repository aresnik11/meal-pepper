<h1><%= link_to @recipe.title, @recipe.url, target: "_blank" %></h1>

<%= link_to (image_tag @recipe.image_url), @recipe.url, target: "_blank"  %>

<ul>
    <li><b>Dish Type:</b> <%= @recipe.dish_type %></li>
    <li><b>Vegetarian:</b> <%= @recipe.vegetarian %></li>
    <li><b>Cuisine:</b> <%= @recipe.cuisine %></li>
    <li><b>Time:</b> <%= @recipe.time %></li>
    <li><b>Servings:</b> <%= @recipe.servings %></li>
    <li><b>Cheap:</b> <%= @recipe.cheap %></li>
    <li><b>Popular:</b> <%= @recipe.popular %></li>
    <li><b>Ingredients:</b>
        <ul>
        <% @recipe.ingredients.each do |ing| %>
            <li><%= ing.name %></li>
        <% end %>
        </ul>
    </li>
</ul>
